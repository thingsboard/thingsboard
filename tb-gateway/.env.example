# Service Configuration
SERVICE_NAME=tb-gateway
SERVICE_ID=gateway-001
ENVIRONMENT=development

# Backend API Connection
TB_HOST=localhost
TB_PORT=8080
TB_PROTOCOL=http
GATEWAY_ACCESS_TOKEN=YOUR_GATEWAY_ACCESS_TOKEN_HERE

# MQTT Transport
MQTT_ENABLED=true
MQTT_BIND_ADDRESS=0.0.0.0
MQTT_BIND_PORT=1883
MQTT_SSL_ENABLED=false
MQTT_MAX_CONNECTIONS=10000

# HTTP Transport
HTTP_ENABLED=true
HTTP_BIND_ADDRESS=0.0.0.0
HTTP_BIND_PORT=8081

# CoAP Transport
COAP_ENABLED=true
COAP_BIND_ADDRESS=0.0.0.0
COAP_BIND_PORT=5683

# Kafka
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=["localhost:9092"]
KAFKA_TOPIC_TELEMETRY=tb.telemetry
KAFKA_TOPIC_ATTRIBUTES=tb.attributes
KAFKA_TOPIC_EVENTS=tb.events

# Redis
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200

# Telemetry Processing
BATCH_SIZE=100
BATCH_TIMEOUT=1.0
MAX_PAYLOAD_SIZE=65536

# Device State
DEVICE_ACTIVITY_TIMEOUT=300
DEVICE_STATE_CHECK_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
